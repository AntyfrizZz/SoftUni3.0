@using CarDealer.Models.ViewModels.Suppliers
@model EditSupplierVm
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Supplier</h2>

<form method="post">
    <input type="number" hidden="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Name: </label>
        <input id="name" class="form-control" type="text" value="@Model.Name" name="name" />
    </div>
    <div class="form-group">
        <label for="isImporter">Is importer: </label>
        <input id="isImporter" class="form-control" @if (Model.IsImporter) { @: checked="checked"
                          } type="checkbox" name="isImporter" />
    </div>
    <div class="form-group">
        <input type="submit" class="form-control" value="Edit" />
    </div>
</form>

